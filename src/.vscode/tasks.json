{
    "version": "2.0.0",
    "type": "shell",
    "problemMatcher": "$msCompile",
    "tasks": [
        {
            "label": "tmbuild",
            "group": "build",
            "windows": {
                "command": "%TM_DINO_SDK_DIR%/bin/tmbuild.exe",
                "args": [
                    "--quiet",
                    "--no-unit-test"
                ]
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "zig cc build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "zig",
                "args": [
                    "cc",
                    "-g",
                    "-gcodeview",
                    "-shared",
                    "-o",
                    "bin/Debug/tm_dinosaur_simulate.dll",
                    "dinosaur_simulate.c",
                    "-I",
                    "%TM_DINO_SDK_DIR%/headers",
                    "-Wno-microsoft-enum-forward-reference"
                ]
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "zig cc build [Linux]",
            "group": "build",
            "windows": {
                "command": "zig",
                "args": [
                    "cc",
                    "-g",
                    "-target",
                    "x86_64-linux-gnu",
                    "-shared",
                    "-o",
                    "bin/Debug/tm_dinosaur_simulate.so",
                    "dinosaur_simulate.c",
                    "-I",
                    "%TM_DINO_SDK_DIR%/headers",
                    "-Wno-microsoft-enum-forward-reference"
                ]
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "docgen",
            "group": "build",
            "windows": {
                "command": "%TM_DINO_SDK_DIR%/bin/docgen.exe"
            },
            "args": [
                "-e",
                "dinosaur_simulate.c"
            ],
        },
        {
            "label": "launch",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "windows": {
                "command": "%TM_DINO_SDK_DIR%/bin/the-machinery.exe"
            },
            "args": [
                "--load-project",
                "../project"
            ],
        },
    ]
}