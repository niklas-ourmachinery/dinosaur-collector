{
    "version": "2.0.0",
    "type": "shell",
    "problemMatcher": "$msCompile",
    "tasks": [
        {
            "label": "tmbuild",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "C://Work//themachinery//tmbuild.exe",
                "args": [
                    "--quiet",
                    "--no-unit-test"
                ]
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "docgen",
            "group": "build",
            "windows": {
                "command": "C://Work//themachinery//bin//Debug//docgen.exe"
            },
            "args": [
                "-e",
                "dinosaur_simulate.c"
            ],
        },
    ]
}